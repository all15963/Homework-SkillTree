@model Homework_SkillTree.Models.ViewModels.CashFormListViewModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("Index", "Home", new AjaxOptions { UpdateTargetId = "ajaxPanel", InsertionMode = InsertionMode.InsertAfter }, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CashRecordForm.Category, htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.CashRecordForm.Category,
            Model.SelectListItems,
            new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CashRecordForm.Category, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CashRecordForm.Money, htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.CashRecordForm.Money, new { htmlAttributes = new { @class = "form-control", placeholder = "金額" } })
            @Html.ValidationMessageFor(m => m.CashRecordForm.Money, null, new { @class = "text-danger" } )
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CashRecordForm.Date, htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.CashRecordForm.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "日期" } })
            @Html.ValidationMessageFor(m => m.CashRecordForm.Date, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CashRecordForm.Description, htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.CashRecordForm.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CashRecordForm.Description, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-10 col-sm-2">
            <button type="submit" class="btn btn-default">送出</button>
        </div>
    </div>
}

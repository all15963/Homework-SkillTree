@model Homework_SkillTree.Models.HistoryRecordModel

@{
    Layout = null;
}

<tr>
    <th>@Model.IdTitle</th>
    <th>@Model.CategoryTitle</th>
    <th>@Model.DateTitle</th>
    <th>@Model.MoneyTitle</th>
</tr>
@for (int i = 0; i < Model.Records.Count; i++)
{
    <tr>
        <td>@(i+1)</td>
        <td>@Model.Records[i].Category</td>
        <td>@Model.Records[i].Date.ToString("yyyy-MM-dd")</td>
        <td>@Model.Records[i].Money</td>
    </tr>
}
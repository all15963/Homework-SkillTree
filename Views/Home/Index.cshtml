@model Homework_SkillTree.Models.ViewModels.CashRecordFormViewModel
@{
    ViewBag.Title = "Home Page";
    string labelClass = "col-sm-2 control-label";

    @* 下拉選單的options *@
    var categoryOptions = (IEnumerable<SelectListItem>)ViewData["category_option"];
}
<div class="well">
    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="@labelClass">@Html.DisplayNameFor(m => m.category)</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.category,
                categoryOptions,
                new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="@labelClass">@Html.DisplayNameFor(m => m.money)</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.money, new { @class = "form-control", placeholder = "金額" })
            </div>
        </div>
        <div class="form-group">
            <label class="@labelClass">@Html.DisplayNameFor(m => m.date)</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.date, new { @class = "form-control", placeholder = "日期" })
            </div>
        </div>
        <div class="form-group">
            <label class="@labelClass">@Html.DisplayNameFor(m => m.description)</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            @Html.Action("ShowRecords", "Home")
        </table>
    </div>
</div>
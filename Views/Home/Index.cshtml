@model List<Homework_SkillTree.Models.HistoryRecord>
@{
    ViewBag.Title = "Home Page";
    string labelClass = "col-sm-2 control-label";
    @* 下拉選單的options *@
    var selectList = new List<SelectListItem>()
    {
        new SelectListItem {Text = "請選擇", Value = "", Selected = true},
        new SelectListItem {Text = "支出"},
        new SelectListItem {Text = "收入"},
    };
}
<div class="well">
    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("category", "類別", new { @class = labelClass })
            <div class="col-sm-10">
                @Html.DropDownList(
                "category", (IEnumerable<SelectListItem>)selectList,
                new { @class = "form-control" }
                )
            </div>
        </div>
        <div class="form-group">
            @Html.Label("money", "金額", new { @class = labelClass })
            <div class="col-sm-10">
                @Html.TextBox("money", null, new { @class = "form-control", placeholder = "金額" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("date", "日期", new { @class = labelClass })
            <div class="col-sm-10">
                @Html.TextBox("date", null, new { @class = "form-control", placeholder = "日期" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("description", "備註", new { @class = labelClass })
            <div class="col-sm-10">
                @Html.TextArea("description", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model[i].Category</td>
                    <td>@Model[i].Date</td>
                    <td>@Model[i].Money</td>
                </tr>
            }
        </table>
    </div>
</div>